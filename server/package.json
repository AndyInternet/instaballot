{
  "name": "instaballot-api",
  "description": "anonymous surveys in an instant - back end",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "ts-node-dev --files --respawn --rs --clear --notify ./src/server.ts",
    "lint": "eslint . --ext .ts",
    "build": "tsc --project ./",
    "startBuild": "node ./build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndyInternet/instaballot-api.git"
  },
  "author": "Andy Lawrence",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/AndyInternet/instaballot-api/issues"
  },
  "homepage": "https://github.com/AndyInternet/instaballot-api#readme",
  "dependencies": {
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/http-errors": "^2.0.1",
    "@types/node": "^18.11.18",
    "@types/node-schedule": "^2.1.0",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "pretty-error": "^4.0.0",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.5.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {},
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off"
    },
    "ignorePatterns": [
      "**/tests/**",
      "**/commands/**"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "endOfLine": "lf"
  }
}
